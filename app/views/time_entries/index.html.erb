<h1>Listing time_entries</h1>

<table>
  <tr>
    <th>Start time</th>
    <th>End time</th>
  </tr>

<% for time_entry in @time_entries %>
  <tr>
    <td><%=h time_entry.start_time %></td>
    <td><%=h time_entry.end_time %></td>
    <td>
 	  <% if time_entry.start_time %>
       <%= link_to 'Stop', time_entry_path(time_entry), :method => :PUT %>
      <% end %>
    </td>
<!--
    <td><%= link_to 'Show', time_entry %></td>
    <td><%= link_to 'Destroy', time_entry, :confirm => 'Are you sure?', :method => :delete %></td>
//-->
  </tr>
<% end %>
</table>

